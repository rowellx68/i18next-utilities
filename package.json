{
  "name": "vite-plugin-typed-i18next-loader",
  "version": "1.2.1",
  "description": "Generate a virtual module for resources and type definitions for i18next.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup --watch",
    "test": "vitest run",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vite-plugin",
    "i18next",
    "typescript",
    "loader"
  ],
  "author": "Rowell Heria",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rowellx68/vite-plugin-typed-i18next-loader.git"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.12.8",
    "prettier": "^3.2.5",
    "release-it": "^17.2.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "i18next": "^23.11.3",
    "vite": "^5.2.10"
  },
  "dependencies": {
    "dot-prop": "^8.0.2",
    "fast-glob": "^3.3.2",
    "flat": "^6.0.1",
    "ts-deepmerge": "^7.0.0",
    "yaml": "^2.4.2"
  }
}
